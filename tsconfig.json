{
  "compilerOptions": {
    "target": "es2020",
    "lib": ["es2020"],
    "moduleResolution": "node",

    "rootDir": "./src",

    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true
  }
}
